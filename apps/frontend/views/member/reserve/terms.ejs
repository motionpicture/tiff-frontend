<div class="loginform loginform-member">
    <% if (req.form) { %>
    <% req.form.errors.forEach(function (error) { %>
    <p class="errmsg"><%- error %></p>
    <% }) %>
    <% } %>

    <form method="post">
        <div class="form-group form-inline">
            <labeL>ログイン番号</labeL>
            <input type="text" name="userId" id="id_userId" class="form-control" value="<%- userId %>">
        </div>
        <div class="form-group form-inline">
            <label>パスワード</label>
            <input type="password" name="password" id="id_password" class="form-control" value="<%- password %>">
        </div>
        <a class="btn btn-big btn-login" href="javascript:void(0);"><span>利用規約に同意してログイン</span></a>
    </form>
</div>

<script>
$(function(){
    $('.btn-login').on('click', function(){
        $('form').submit();
    });
});
</script>
