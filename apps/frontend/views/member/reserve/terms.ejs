<div class="loginform loginform-member">
    <% if (req.form) { %>
    <% Object.keys(req.form.getErrors()).forEach(function (key) { %>
    <p class="errmsg"><%- req.form.getErrors(key)[0] %></p>
    <% }) %>
    <% } %>

    <form method="post">
        <div class="form-group form-inline">
            <labeL>ログイン番号</labeL>
            <input type="text" name="userId" id="id_userId" class="form-control" value="<%- userId %>">
        </div>
        <div class="form-group form-inline">
            <label>パスワード</label>
            <input type="password" name="password" id="id_password" class="form-control" value="<%- password %>">
        </div>
        <a class="btn btn-big btn-login" href="javascript:void(0);"><span>ログイン</span></a>
    </form>
</div>

<script>
$(function(){
    $('.btn-login').on('click', function(){
        $('form').submit();
    });
});
</script>
