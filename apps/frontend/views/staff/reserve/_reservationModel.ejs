<div class="row">
    <div class="col-md-2">
    </div>

    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>作品名</dt>
            <dd><%- reservationModel.performance.film.name %></dd>

            <dt>上映時間/場所</dt>
            <dd><%- reservationModel.performance.day %> <%- reservationModel.performance.start_time %> ～ <%- reservationModel.performance.theater.name %> <%- reservationModel.performance.screen.name %></dd>

            <dt>座席/券種</dt>
            <dd>
                <% if (reservationModel.reservationIds.length > 0) { %>

                    <div class="row">
                    <% reservationModel.reservationIds.forEach((reservationId, index) => { %>
                        <% let reservation = reservationModel.getReservation(reservationId) %>
                        <% if (index > 0 && index % 4 === 0) { %>
                        </div>
                        <div class="row">
                        <% } %>

                        <div class="col-xs-3">
                            <a class="show-seat" href="javascript:void(0);" data-seat-code="<%- reservation.seat_code %>"><%- reservation.seat_code %></a><br>
                            <%- reservation.ticket_name %><br>
                        </div>
                    <% }) %>
                    </div>

                <% } %>

            </dd>
        </dl>
    </div>
</div>


<script>
$(function(){
    $('.show-seat').on('click', function(){
        showSeatPositon(<%- JSON.stringify(reservationModel.performance.screen._id) %>, [$(this).attr('data-seat-code')]);
    });
})
</script>