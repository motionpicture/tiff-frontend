<h1>決済方法選択</h1>

<%- include('./_reservationModel') %>

<%- include('./_step') %>

<div class="row">
    <form method="post">
        <% for (let key in form.fields.method.choices) { %>
        <div class="radio">
            <label for="id_method_01">
                <input type="radio" name="method" id="id_method_01" value="<%- key %>"<% if (form.fields.method.value === key) { %> checked="checked"<% } %>>
                <%- form.fields.method.choices[key] %>
            </label>
        </div>
        <% } %>

        <a class="btn btn-default btn-lg btn-block" href="<%- url('customer.reserve.profile', {token: req.params.token}) %>">戻る</a>
        <input class="btn btn-primary btn-lg btn-block confirm-reservation" type="submit" value="送信">
    </form>
</div>