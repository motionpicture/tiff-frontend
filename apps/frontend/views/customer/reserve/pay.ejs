<h1>決済方法選択</h1>

<%- include('./_reservationModel') %>

<%- include('./_step') %>

<div class="row">
    <form method="post">
        <div class="radio">
            <label for="id_method_<%- ReservationUtil.PAY_METHOD_CREDIT %>">
                <input type="radio" name="method" id="id_method_<%- ReservationUtil.PAY_METHOD_CREDIT %>" value="<%- ReservationUtil.PAY_METHOD_CREDIT %>"<% if (method === ReservationUtil.PAY_METHOD_CREDIT) { %> checked="checked"<% } %>>
                クレジットカード決済
            </label>
        </div>
        <div class="radio">
            <label for="id_method_<%- ReservationUtil.PAY_METHOD_CVS %>">
                <input type="radio" name="method" id="id_method_<%- ReservationUtil.PAY_METHOD_CVS %>" value="<%- ReservationUtil.PAY_METHOD_CVS %>"<% if (method === ReservationUtil.PAY_METHOD_CVS) { %> checked="checked"<% } %>>
                コンビニ決済
            </label>
        </div>

        <a class="btn btn-default btn-lg btn-block" href="<%- url('customer.reserve.profile', {token: req.params.token}) %>">戻る</a>
        <input class="btn btn-primary btn-lg btn-block confirm-reservation" type="submit" value="送信">
    </form>
</div>