<h1>スケジュール選択</h1>

<%- include('./_step') %>

<div class="row">
    <% for (let filmId in performanceDocumentsByFilm) { %>
        <% let performanceDocuments = performanceDocumentsByFilm[filmId] %>

        <h3><%- performanceDocuments[0].get('film').get('name') %></h3>

        <div class="row">
        <% performanceDocuments.forEach(function(performance, index) { %>
        <% if (index % 12 === 0) { %>
        <div class="row">
        </div>
        <% } %>

            <div class="col-sm-4">
                <a href="javascript:void(0);" onclick="selectPerformance('<%- performance._id %>');">
                <%- performance.day %><br>
                <%- performance.theater.name %> <%- performance.screen.name %><br>
                <%- performance.start_time %>-<%- performance.end_time %><br>
                ???
                </a>
            </div>
        <% }) %>
        </div>
    <% } %>
</div>


<script>
function selectPerformance(performaceId) {
    $('input[name="performance_id"]').val(performaceId);
    $('form').submit();
    return false;
}
</script>

<form method="post">
<%- form.toHTML() %>
</form>

