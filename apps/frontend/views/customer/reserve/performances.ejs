<h1>スケジュール選択</h1>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>film</th>
                <th>day</th>
                <th>theater</th>
                <th>screen</th>
                <th>start</th>
                <th>end</th>
                <th>status</th>
            </tr>
        </thead>

        <tbody>

            <% performances.forEach(function(performance, index) { %>
            <tr>
                <th scope="row"><a href="javascript:void(0);" onclick="selectPerformance('<%- performance._id %>');"><%- performance.film.name %></a></th>
                <td><%- performance.day %></td>
                <td><%- performance.theater.name %></td>
                <td><%- performance.screen.name %></td>
                <td><%- performance.start_time %></td>
                <td><%- performance.end_time %></td>
                <td>???</td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<script>
function selectPerformance(performaceId) {
    $('input[name="performance_id"]').val(performaceId);
    $('form').submit();
    return false;
}
</script>

<form method="post">
<%- form.toHTML() %>
</form>

<a class="btn btn-default btn-lg btn-block" href="<%- url('customer.reserve.terms', {token: req.params.token}) %>">戻る</a>
