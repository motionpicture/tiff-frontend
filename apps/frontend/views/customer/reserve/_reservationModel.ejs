<div class="row">
    <div class="col-md-2">
    </div>

    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>作品名</dt>
            <dd><%- reservationModel.performance.film.name %></dd>

            <dt>上映時間/場所</dt>
            <dd><%- reservationModel.performance.day %> <%- reservationModel.performance.start_time %> ～ <%- reservationModel.performance.theater.name %> <%- reservationModel.performance.screen.name %></dd>

            <dt>座席/券種</dt>
            <dd>
                <% if (reservationModel.ticketChoices.length > 0) { %>

                    <div class="row">
                    <% reservationModel.ticketChoices.forEach((ticketChoice, index) => { %>
                        <% if (index > 0 && index % 4 === 0) { %>
                        </div>
                        <div class="row">
                        <% } %>

                            <div class="col-xs-3">
                                <a class="show-seat" href="javascript:void(0);" data-seat-code="<%- ticketChoice.seat_code %>"><%- ticketChoice.seat_code %></a><br>
                                <%- ticketChoice.ticket.name %><br>
                                <%- ticketChoice.ticket.price %><br>
                            </div>
                    <% }) %>
                    </div>


                <% } else if (reservationModel.seatCodes.length > 0) { %>

                    <div class="row">
                    <% reservationModel.seatCodes.forEach((seatCode, index) => { %>
                        <% if (index > 0 && index % 4 === 0) { %>
                        </div>
                        <div class="row">
                        <% } %>

                            <div class="col-xs-3">
                                <a class="show-seat" href="javascript:void(0);" data-seat-code="<%- seatCode %>"><%- seatCode %></a><br>
                            </div>
                    <% }) %>
                    </div>

                <% } %>

            </dd>

            <dt>合計金額</dt>
            <dd>
                <%- reservationModel.getTotalPrice() %>
            </dd>
        </dl>
    </div>
</div>


<script>
$(function(){
    $('.show-seat').on('click', function(){
        showSeatMap(<%- JSON.stringify(reservationModel.screenSeatCodes) %>, [$(this).attr('data-seat-code')]);
    });
})
</script>