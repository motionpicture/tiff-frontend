<%
let routeName = '';
if (req.hasOwnProperty('route')) {
    routeName = req.route.name;
}
%>

<div class="row">

    <div class="table-responsive">
        <table class="table table-bordered">
        <tr>
            <td class="col-xs-2 col-md-2<% if (routeName === 'sponsor.reserve.performances') { %> bg-primary<% } else { %> bg-info text-muted<% } %>">
                STEP1
            </td>
            <td class="col-xs-2 col-md-2<% if (routeName === 'sponsor.reserve.seats' || routeName === 'sponsor.reserve.tickets') { %> bg-primary<% } else { %> bg-info text-muted<% } %>">
                STEP2
            </td>
            <td class="col-xs-2 col-md-2<% if (routeName === 'sponsor.reserve.profile') { %> bg-primary<% } else { %> bg-info text-muted<% } %>">
                STEP3
            </td>
            <td class="col-xs-2 col-md-2<% if (routeName === 'sponsor.reserve.pay') { %> bg-primary<% } else { %> bg-info text-muted<% } %>">
                STEP4
            </td>
            <td class="col-xs-2 col-md-2<% if (routeName === 'sponsor.reserve.confirm') { %> bg-primary<% } else { %> bg-info text-muted<% } %>">
                STEP5
            </td>
            <td class="col-xs-2 col-md-2<% if (routeName === 'sponsor.reserve.complete') { %> bg-primary<% } else { %> bg-info text-muted<% } %>">
                STEP6
            </td>
        </tr>
        </table>
    </div>

</div>