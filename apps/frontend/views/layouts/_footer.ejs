<%
let routeName = '';
if (req.hasOwnProperty('route')) {
    routeName = req.route.name;
}
%>
<footer>
    <% if (routeName.indexOf('mypage') < 0) { %>
    <ul>
        <li><a href="<%- url('privacy') %>" target="_blank">プライバシーポリシー</a></li>
        <li><a href="<%- url('policy') %>" target="_blank">利用規約</a></li>
        <li><a href="#" target="_blank">お問合わせ</a></li>
    </ul>
    <% } %>
    <div class="copyrights">
        <div class="inner">
            <!-- 購入フロー中で、パフォーマンスが確定していれば作品著作権をフッターに追加 -->
            <% if (typeof(reservationModel) !== 'undefined' && reservationModel.performance) { %>
            <p class="film-copyright"><%= reservationModel.performance.film.copyright %></p>
            <% } %>
            <span>&copy; Tokyo International Film Festival All Rights Reserved.</span>
        </div>
    </div>
</footer>
